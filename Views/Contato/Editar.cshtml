@model AgendaMVC.Models.Contato

@{
    ViewData["Title"] = "Editar contato";
}

<h1>Editar contato</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form aps-action="Editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Ativo" class="cotrol-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary btn-sm" />
                <a asp-action="Index" class="btn btn-danger btn-sm">Voltar</a>
            </div>

        </form>
    </div>
</div>
